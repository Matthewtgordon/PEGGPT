{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PEG Rules Schema v1.0",
  "description": "Defines the structure for the agent's enforcement rules and operational policies.",
  "type": "object",
  "properties": {
    "version": {
      "description": "Semantic version of the rules file.",
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "metadata": {
      "description": "Contains metadata about the file.",
      "type": "object",
      "properties": {
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["created_at", "updated_at"]
    },
    "description": {
      "description": "A human-readable description of the file's purpose.",
      "type": "string"
    },
    "rules_items": {
      "description": "A list of all the individual enforcement rules.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "description": "A unique identifier for the rule item.",
            "type": "string",
            "format": "uuid"
          },
          "topic": { "type": "string" },
          "tag": {
            "type": "string",
            "pattern": "^#\\w+$"
          },
          "tier": {
            "type": "string",
            "enum": ["enforcement", "safety", "evaluation", "procedure"]
          },
          "content": { "type": "string" }
        },
        "required": ["id", "topic", "tag", "tier", "content"],
        "additionalProperties": false
      }
    }
  },
  "required": ["version", "metadata", "description", "rules_items"],
  "additionalProperties": false
}
